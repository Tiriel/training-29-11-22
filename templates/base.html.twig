<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            {% block header %}
                {{ include('navbar/_navbar.html.twig', {currentRoute: app.request.attributes.get('_route')}, with_context = false) }}
            {% endblock %}
        </header>
        <main class="container mt-5">
            {% block body %}{% endblock %}
        </main>
        <aside>
            {{ render_esi(controller('App\\Controller\\MovieController::decades')) }}
        </aside>
        {#<footer id="react_footer"></footer>
        {{ dump() }}
    {{ encore_entry_script_tags('react') }}#}
    </body>
</html>
